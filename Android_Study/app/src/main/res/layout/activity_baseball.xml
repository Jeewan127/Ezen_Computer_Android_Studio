<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.android_study.model.BaseballActivity"
    android:background="#2E9AFE">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baseball Game"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/baseball_playCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/baseball_first_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseball_playCount"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/baseball_second_random"
        android:layout_marginRight="30dp"
        android:text="?"
        android:textSize="50dp"/>

    <TextView
        android:id="@+id/baseball_second_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseball_playCount"
        android:layout_centerHorizontal="true"
        android:text="?"
        android:textSize="50dp"/>

    <TextView
        android:id="@+id/baseball_third_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseball_playCount"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/baseball_second_random"
        android:layout_marginLeft="30dp"
        android:text="?"
        android:textSize="50dp"/>

    <EditText
        android:id="@+id/baseball_first_number"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/baseball_second_random"
        android:layout_toLeftOf="@+id/baseball_second_number"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/baseball_second_number"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/baseball_second_random"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/baseball_third_number"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/baseball_second_random"
        android:layout_toRightOf="@+id/baseball_second_number"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/baseball_strike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseball_second_number"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/baseball_ball"
        android:hint="0Strike"
        android:layout_marginRight="30dp"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/baseball_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseball_second_number"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="0Ball"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/baseball_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseball_second_number"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/baseball_ball"
        android:layout_marginLeft="30dp"
        android:hint="0Out"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/baseball_ball"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/baseball_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:layout_below="@id/baseball_ball"/>
        <Button
            android:id="@+id/baseball_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다시하기"
            android:layout_below="@id/baseball_ball"/>
    </LinearLayout>

</RelativeLayout>
