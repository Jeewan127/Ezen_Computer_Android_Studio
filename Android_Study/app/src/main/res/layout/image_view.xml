<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00a99a">

    <ImageView
        android:id="@+id/credit"
        android:layout_width="64dp"
        android:layout_height="46.5dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="228.3dp"
        android:background="@drawable/ic_credit_card" />

    <ImageView
        android:id="@+id/cash"
        android:layout_width="80.8dp"
        android:layout_height="80.8dp"
        android:layout_alignBottom="@+id/credit"
        android:layout_marginLeft="137dp"
        android:background="@drawable/ic_cash" />

    <ImageView
        android:id="@+id/budget"
        android:layout_width="93.3dp"
        android:layout_height="93.3dp"
        android:layout_alignBottom="@+id/cash"
        android:layout_marginLeft="177dp"
        android:background="@drawable/ic_budget" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="80.5dp"
        android:layout_height="31dp"
        android:textSize="28dp"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:text="가계부"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6.3dp"
        android:text="create by LimJeeWan"/>

    <TextView
        android:id="@+id/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textview1"
        android:layout_toLeftOf="@+id/textview1"
        android:textSize="26dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hi"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"/>

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name"
        android:layout_toEndOf="@+id/name" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/number"
        android:layout_toRightOf="@+id/number"/>



</RelativeLayout>