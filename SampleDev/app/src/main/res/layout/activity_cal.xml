<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalActivity"
    android:background="#000000"
    android:gravity="bottom"
    >
    <TextView
        android:id="@+id/input_str"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:text=""
        android:paddingRight="10dp"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn_num_division"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="/"
            android:background="@drawable/shape_oval_cal_3"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/btn_num_multi"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="*"
            android:background="@drawable/shape_oval_cal_3"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/btn_num_minus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="-"
            android:background="@drawable/shape_oval_cal_3"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/btn_num_plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:background="@drawable/shape_oval_cal_3"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn_num_7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="7"
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/btn_num_8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="8"
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/btn_num_9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="9"
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="C"
            android:background="@drawable/shape_oval_cal"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn_num_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="4"
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/btn_num_5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="5"
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/btn_num_6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="6"
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:background="@drawable/shape_oval_cal"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn_num_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1"
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/btn_num_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="2"
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/btn_num_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="3"
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:background="@drawable/shape_oval_cal"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/btn_num_0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="0"
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=" "
            android:background="@drawable/selector_cal_1"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />

        <Button
            android:id="@+id/btn_result"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="
            android:background="@drawable/shape_oval_cal"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
    </LinearLayout>
</LinearLayout>
