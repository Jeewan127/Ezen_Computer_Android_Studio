<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.ezenac.tbja.sampledev.Exam21Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_popup_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="popup 1"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_popup_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="popup 2"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_popup_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="popup 3"
            android:layout_weight="1"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/popup_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#ff0000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="popup 1"
            />
        <Button
            android:id="@+id/btn_popup_close_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="X"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00ff00"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="popup 2"
            />
        <Button
            android:id="@+id/btn_popup_close_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="X"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#0000ff"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="popup 3"
            />
        <Button
            android:id="@+id/btn_popup_close_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="X"
            />
    </RelativeLayout>
</RelativeLayout>
