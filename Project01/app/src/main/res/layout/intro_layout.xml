<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.project01.IntroActivity"
    android:background="#00a99a"
    android:id="@+id/main">

    <RelativeLayout
        android:id="@+id/image_main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181.5dp"
        >

        <ImageView
            android:id="@+id/credit"
            android:layout_width="64dp"
            android:layout_height="46.5dp"
            android:layout_alignBottom="@id/budget"
            android:background="@drawable/ic_credit_card" />

        <ImageView
            android:id="@+id/cash"
            android:layout_width="80.8dp"
            android:layout_height="80.8dp"
            android:layout_alignBottom="@id/budget"
            android:layout_marginLeft="47dp"
            android:background="@drawable/ic_cash" />

        <ImageView
            android:id="@+id/budget"
            android:layout_width="93.3dp"
            android:layout_height="93.3dp"
            android:layout_marginLeft="87dp"
            android:background="@drawable/ic_budget" />

        <TextView
            android:id="@+id/household"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/cash"
            android:layout_marginLeft="4.8dp"
            android:layout_below="@+id/cash"
            android:layout_marginTop="23.3dp"
            android:text="가계부"
            android:textColor="#ffffff"
            android:textSize="28dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6.3dp"
        android:text="create by LimJeeWan"/>

</RelativeLayout>
